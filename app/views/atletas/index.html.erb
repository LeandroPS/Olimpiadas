<p id="notice"><%= notice %></p>

<h1>Atletas</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Photo</th>
      <th>Descricao</th>
      <th>Modalidade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @atletas.each do |atleta| %>
      <tr>
        <td><%= atleta.nome %></td>
        <td><%= image_tag atleta.photo, class: "profile-pic mini" %></td>
        <td><%= atleta.descricao %></td>
        <td><%= atleta.modalidade.nome %></td>
        <td><%= link_to 'Show', atleta %></td>
        <td><%= link_to 'Edit', edit_atleta_path(atleta) %></td>
        <td><%= link_to 'Destroy', atleta, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Atleta', new_atleta_path, class: "btn btn-success" %>
